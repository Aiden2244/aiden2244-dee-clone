{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "schedule": [
    "at any time"
  ],
  "timezone": "America/New_York",
  "enabledManagers": [
    "pip_requirements",
    "poetry",
    "bazelisk",
    "bazel-module",
    "github-actions"
  ],
  "includePaths": [
    "drake_pip/**",
    "drake_poetry/**",
    "drake_bazel_download/**",
    "drake_bazel_external/**",
    "drake_bazel_external_legacy/**",
    "drake_cmake_external/**",
    "drake_cmake_installed/**",
    "drake_cmake_installed_apt/**",
    ".github/**"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "apple_support",
        "ubuntu",
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "pip_requirements",
        "poetry",
        "bazelisk",
        "bazel-module"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
