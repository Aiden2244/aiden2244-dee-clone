{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "schedule": [
    "at any time"
  ],
  "timezone": "America/New_York",
  "enabledManagers": [
    "pip_requirements",
    "poetry",
    "bazelisk",
    "bazel-module"
  ],
  "includePaths": [
    "drake_pip/**",
    "drake_poetry/**",
    "drake_bazel_download/**"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "drake"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchFileNames": [
        "/drake_bazel_download/\\.bazelversion$"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
